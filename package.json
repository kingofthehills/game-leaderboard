{
  "name": "gaming-leaderboard",
  "version": "1.0.0",
  "description": "High-performance Gaming Leaderboard System",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev --name init",
    "db:push": "prisma db push",
    "db:seed": "node src/scripts/seed.js",
    "db:seed:fast": "node src/scripts/seed-fast.js",
    "worker": "node src/workers/leaderboardWorker.js",
    "test": "jest --runInBand --forceExit",
    "test:watch": "jest --watch",
    "lint": "eslint src/",
    "start:all": "concurrently \"npm run start\" \"npm run worker\""
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "bullmq": "^5.13.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "express-rate-limit": "^7.4.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.4.1",
    "joi": "^17.13.3",
    "newrelic": "^12.6.0",
    "pg": "^8.13.0",
    "prisma": "^5.22.0",
    "winston": "^3.14.2"
  },
  "devDependencies": {
    "concurrently": "^9.0.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.7",
    "supertest": "^7.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": ["**/tests/**/*.test.js"],
    "testTimeout": 30000
  }
}
