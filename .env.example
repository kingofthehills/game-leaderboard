# ============================================
# Gaming Leaderboard System - Environment Config
# ============================================
# Copy to .env and fill in your values

# Server
NODE_ENV=development
PORT=3001

# PostgreSQL
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/gaming_leaderboard?schema=public&connection_limit=20&pool_timeout=30"

# Redis
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Leaderboard Config
LEADERBOARD_REFRESH_INTERVAL_MS=10000
LEADERBOARD_TOP_N=10
LEADERBOARD_CACHE_TTL_SECONDS=15

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# New Relic
NEW_RELIC_APP_NAME=gaming-leaderboard
NEW_RELIC_LICENSE_KEY=YOUR_NEW_RELIC_LICENSE_KEY
NEW_RELIC_ENABLED=false

# Seed Config
SEED_USERS_COUNT=1000000
SEED_SESSIONS_COUNT=5000000
SEED_BATCH_SIZE=10000
